@using DFProject.Models;
@model Contents
@{ ViewBag.Title = "UpdateContent";
                Layout = "~/Views/Shared/AdminLayout.cshtml"; }


<!DOCTYPE html>
<html>
<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/summernote-0.8.18-dist/summernote-bs4.css" rel="stylesheet" />
    <script src="~/summernote-0.8.18-dist/summernote-bs4.js"></script>
</head>
<body>

    @using (Html.BeginForm("UpdateContent", "Admin", FormMethod.Post))
    {
<div class="form-group">
    @Html.Label("Id")
    @Html.TextBoxFor(input => input.Id, new { @class = "form-control", @readonly = "readonly" })
    <br /> <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.cats, new { @class = "form-control" })
    <br /> <br />
    @Html.Label("İçerik Sırası")
    @Html.TextBoxFor(input => input.ContentOrder, new { @class = "form-control", @required = "required" })
    <br /> <br />
    @Html.Label("Dil")
    @Html.DropDownListFor(x => x.LangId, (List<SelectListItem>)ViewBag.langs, new { @class = "form-control" })
    <br /> <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(input => input.ContentTitle, new { @class = "form-control", @maxLength = "250" })
    @Html.ValidationMessageFor(input => input.ContentTitle, "Maksimum 250 karakter girilebilir!", new { @style = "color: red" })
    <br /> <br />
    @Html.Label("İçerik Özeti")
    @Html.TextAreaFor(input => input.ContentSummary, new { @class = "form-control", @maxLength = "350" })
    @Html.ValidationMessageFor(input => input.ContentSummary, "Maksimum 350 karakter girilebilir!", new { @style = "color: red" })
    <br /> <br />
    @Html.Label("İçerik")
    @Html.TextAreaFor(input => input.ContentBody, new { @id = "summernote" })
    <script>
        $('#summernote').summernote({
            tabsize: 2,
            height: 500
        });
    </script>
    <br /> <br />
    <button class="btn btn-info">Güncelle</button>
</div>}
</body>
</html>