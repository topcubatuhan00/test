@using DFProject.Models;
@model Categories
@{ ViewBag.Title = "UpdateCategory";
                Layout = "~/Views/Shared/AdminLayout.cshtml"; }

@using (Html.BeginForm("UpdateCategory", "Admin", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Id")
    @Html.TextBoxFor(input => input.Id, new { @class = "form-control", @readonly = "readonly" })
    <br /> <br />
    @Html.Label("Dil")
    @Html.DropDownListFor(x => x.LangId, (List<SelectListItem>)ViewBag.langs, new { @class = "form-control" })
    <br /> <br />
    @Html.Label("Kategori İsmi")
    @Html.TextBoxFor(input => input.CategoryName, new { @class = "form-control", @maxLength = "250" })
    @Html.ValidationMessageFor(input => input.CategoryName, "Maksimum 250 karakter girilebilir!", new { @style = "color: red" })
    <br /> <br />
    @Html.Label("Üst Kategori")
    @Html.DropDownListFor(input => input.ParentId, (List<SelectListItem>)ViewBag.cats, new { @class = "form-control" })
    <br /> <br />
    @Html.Label("Kategori Sırası")
    @Html.TextBoxFor(input => input.CategoryOrder, new { @class = "form-control", @required = "required" })
    <br /> <br />
    <button class="btn btn-info">Güncelle</button>
</div>}